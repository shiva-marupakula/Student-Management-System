#To print the bill payed by a merchant
n=raw_input('enter the item name')
q=input('enter the item quantity')
p=float(input('enter the price')
d=input('enter the discount')
total=q*p
dis=total*(float(d)/100)
g=total-dis
print '*******************BILL*************************'
print 'Item name\tQuantity\tPrice\tDiscount'
print '%s\t\t%d\t\t%f'%(n,q,p,d)
print '*****************Visit Again********************'
print 'Total price is',g
